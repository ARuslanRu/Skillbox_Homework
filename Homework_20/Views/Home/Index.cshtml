@model Homework_20.Models.Profile

<div class="container">
    <div class="card">
        <div class="card-header">

            <div class="row align-items-center">
                <div class="col-12 col-md-6">
                    <h1>@Model.LastName @Model.FirstName @Model.MiddleName</h1>
                </div>
                <div class="col-12 col-md-6 text-right">
                    @if (User.IsInRole(Homework_20.WebConstants.AdminRole))
                    {
                        <a asp-action="Edit" class="btn btn-primary mr-2">
                            <i class="fas fa-edit"></i>
                        </a>
                    }
                </div>
            </div>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-lg-4 text-center">
                    <img src="@WebConstants.ImagePath@Model.Image" width="100%" class="rounded" alt="Изображение" />
                </div>

                <div class="col-12 col-lg-8">
                    <h4 class="text-success">О Себе:</h4>
                    @*@Html.Raw*@
                    <p class="text-secondary">@Html.Raw(Model.About)</p>
                </div>
            </div>
        </div>

    </div>

</div>